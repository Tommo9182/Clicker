@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="box-container">
    <div class="text-center">
        <section>
            <form id="account" method="post">
                <h2 class="text-center">Log in to save your scores</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label asp-for="Input.Email" class="login-label"></label>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="login-input text-center" autocomplete="username" aria-required="true" placeholder="Email"/><br />
                    <span asp-validation-for="Input.Email" style="display:inline-block;" class="text-danger"></span>
                </div>

                <label asp-for="Input.Password" class="login-label"></label>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="login-input text-center" autocomplete="current-password" aria-required="true" placeholder="Password" /><br />
                    <span asp-validation-for="Input.Password" style="display:inline-block;" class="text-danger"></span>
                </div>

                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="login-button general-button">Log in</button>
                </div>
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
